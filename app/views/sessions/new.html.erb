<h1>Log in!</h1>

<form action="/session" method="post">
  <%= render partial: "layouts/csrf" %>
  
  <label for="session_user_name">Username</label>
  <input type="text" name="user[user_name]" id="session_user_name">
  <br>
  <label for="session_password">Password</label>
  <input type="password" name="user[password]" id="session_password">
  <br>
  <input type="submit" value="Log in!">
</form>
<%= button_to "Sign up", new_user_url, method: :get %>
