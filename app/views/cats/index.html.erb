<h1>All the cats</h1>

<table>
  <thead>
    <tr>
      <th>Cat name:</th>
      <th>age:</th>
      <th>sex:</th>
      <th>color:</th>
    </tr>
  </thead>
  <tbody>
    <% @cats.each do |cat| %>
    <tr>
      <td><%= cat.name %></td>
      <td><%= cat.age %></td>
      <td><%= cat.sex=="F" ? "Female" : "Male" %></td>
      <td><%= cat.color.capitalize %></td>
    </tr>
    <% end %>
  </tbody>
</table>